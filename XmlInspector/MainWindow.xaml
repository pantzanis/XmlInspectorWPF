<Window x:Class="XmlInspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XmlInspector"
        mc:Ignorable="d"
        Title="xmlInspector" Height="450" Width="800">
    <DockPanel Margin="10,10,10,10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open file</Button>
        </WrapPanel>
        <TextBox AllowDrop="true" PreviewDragOver="Preview_Drag_Over"  Drop="File_Drop" Name="txtEditor" />
    </DockPanel>
</Window>
